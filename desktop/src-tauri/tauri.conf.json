{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "{{ project-name | title_case}}",
  "version": "0.1.0",
  "identifier": "com.{{ project-name | snake_case }}.app",
  "build": {
    "beforeDevCommand": "dx serve --port 1420 -i false --open false",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dx bundle --release --platform web",
    "frontendDist": "../dist/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "{{ project-name | title_case}}",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}